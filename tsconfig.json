{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": [ // / to begin with.
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "DOM.Iterable"
    ],
    "types": [
      "cypress"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "cypress/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}